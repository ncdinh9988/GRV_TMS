<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".SelectPropertiesProductActivity">
    <TextView
        android:id="@+id/tvTitle"
        android:text="Chọn Thuộc Tính Sản Phẩm"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:background="@color/blue2"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_above="@+id/layout_bottom"
        android:layout_below="@+id/tvTitle"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Tên sản phẩm:"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold">

            </TextView>
            <TextView
                android:id="@+id/tvSelectProductName"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Tên sản phẩm:"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:textSize="18sp">

            </TextView>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Hạn sử dụng:"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7">
                <EditText
                    android:paddingLeft="2dp"
                    android:background="@drawable/bg_edittext"
                    android:textColor="@color/black"
                    android:id="@+id/edtSelectProductExpiredDate"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:padding="5dp"
                    android:hint="Nhấn vào để chọn ngày" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:text="Ngày sản xuất:     "
                android:layout_margin="5dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="wrap_content">
                <EditText
                    android:paddingLeft="2dp"
                    android:background="@drawable/bg_edittext"
                    android:textColor="@color/black"
                    android:id="@+id/edtSelectProductStockinDate"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:padding="5dp"
                    android:hint="Nhấn vào để chọn ngày" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:text="Shelf life:     "
                android:layout_margin="5dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edtSelectShelfLife"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_edittext"
                    android:hint="Nhấn vào để chọn ngày"
                    android:inputType="number"
                    android:padding="5dp"
                    android:paddingLeft="2dp"
                    android:textColor="@color/black" />

                <CheckBox
                    android:id="@+id/checkBoxMonth"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:buttonTint="#000"
                    android:text="Tháng"
                    android:textColor="#000"
                    android:checked="true"
                    android:textSize="18sp" />

                <CheckBox
                    android:id="@+id/checkBoxDate"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:buttonTint="#000"
                    android:text="Ngày"
                    android:textColor="#000"
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>
